<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/show_label"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:paddingBottom="30dp"
            android:text="Show" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/show_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Show Date" />

        <Spinner
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/showDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet laoreet iaculis. Nullam eu tempus lorem, ac sagittis ex. Proin vestibulum lacinia augue, id molestie sapien iaculis et. Nullam efficitur rhoncus pulvinar. Mauris in fringilla ante. In dapibus vel ipsum congue facilisis. Quisque quis mi quis diam semper iaculis vitae quis lorem. Sed aliquam nulla sit amet mauris ullamcorper, sit amet viverra erat vestibulum. Mauris mattis massa orci, vel consectetur lectus tincidunt eu. Cras sagittis et massa sit amet posuere." />

    </LinearLayout>

    <Button
        android:id="@+id/buy_ticket_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Ticket" />

</LinearLayout>