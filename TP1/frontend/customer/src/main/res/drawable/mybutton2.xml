<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF5722" />
            <gradient android:angle="-90" android:startColor="#FF5722" android:endColor="#FFCCBC"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF5722" />
            <solid android:color="#FFCCBC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF5722" />
            <gradient android:angle="-90" android:startColor="#FFCCBC" android:endColor="#FF5722" />
        </shape>
    </item>
</selector>